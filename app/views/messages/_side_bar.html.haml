.chat-side
  .side__header
    .side__header__box
      .side__header__box__name
        = current_user.name
    %ul.side__header__box__menu
      %li.side__header__box__edit
        = link_to new_group_path do
          =icon('fas','edit')
      %li.side__header__box__group           
        =link_to edit_user_path(current_user) do
          =icon('fas','cog')
  .side__group
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group), class: "groups__name" do
          .groups__name
            = group.name
          .groups__messages
            = group.show_last_message